<%= render "shared/error", obj: @user %>

<div class="well">
  <%= form_for @user do |f| %>
    <div class="content-group">
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>

    <div class="content-group">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <%= f.submit(@user.new_record? ? "Create" : "Update Profile", class: "btn btn-success btn-primary") %>
  <% end %>
</div>
<%= render "shared/error", obj: @post %>

<div class="well">
  <%= form_for @post do |f| %>
    <div class="content-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class="content-group">
      <%= f.label :url %>
      <%= f.text_field :url %>
    </div>

    <div class="content-group">
      <%= f.label :description %>
      <%= f.text_area :description,rows: 5 %>
    </div>

    <div class="content-group">
      <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |ct| %>
        <% ct.label(class: "checkbox inline") { ct.check_box(class: "checkbox") + ct.text } %>
      <% end %>
    </div>

    <br>
    <%= f.submit(@post.new_record? ? "Creat Post" : "Update Post", class: "btn btn-primary") %>
  <% end %>
</div>
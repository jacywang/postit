<p class="pull-right">
  [<%= link_to 'edit this post', edit_post_path(@post) %>]
</p>

<p>
  <%= render @post.categories %>
</p>

<%= render "shared/content_title", title: @post.title %>
<div>
  <strong>Url:</strong> <%= @post.url %>
</div>
<div>
  <strong>Description:</strong> <%= @post.description %>
</div>

<hr>


<%= form_for [@post, @comment] do |f| %>
  <%= render "shared/error", obj: @comment %>
  <div class="content-group">
    <%= f.label :body, "Leave a comment" %>
    <%= f.text_area :body, rows: 3, class: "span4" %>
  </div>
  <%= f.submit "Create Comment", class: "btn btn-small btn-primary" %>
<% end %>

<h5>Comments:</h5>
<% @post.comments.each do |comment| %>
  <div class="well span8">
    <em>"<%= comment.body %>"</em>
    <br>
    <span class="quiet">by</span> 
    <%= link_to comment.creator.username, '' %> 
    <small>at <%= display_time(comment.updated_at) %></small> 
  </div>
<% end %>
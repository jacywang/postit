<% show_post ||= false%>

<div class="row">
  <div class="span0 well text-center">
    <% if logged_in? %>
      <%= link_to post_comment_vote_path(comment.post, comment, vote: true), method: 'post', remote: true do %>
        <i class="icon-arrow-up"></i>
      <% end %>
      <br>
    <% end %>
    <span id="comment_<%= comment.id %>_vote"><%= comment.total_votes %> votes</span>
    <% if logged_in? %>
      <br>
      <%= link_to post_comment_vote_path(comment.post, comment, vote: false), method: 'post', remote: true do %>
        <i class="icon-arrow-down"></i>
      <% end %>
    <% end %>
  </div>

  <div class="well span8">
    <em>"<%= comment.body %>" </em>
    <% if show_post %>
    on <%= link_to comment.post.title, post_path(comment.post)%>
    <% end %>
    <br>
    <span class="quiet">by</span> 
    <%= link_to comment.creator.username, user_path(comment.creator) %> 
    <small>at <%= display_time(comment.updated_at) %></small> 
  </div>
</div>
